{% style %}
/**********what people are saying  content2******************/
.wpas_content2{
  margin: 0;
  padding: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.1);
  margin-top: 20px;
  margin-bottom: 20px;
}

.wpas_content2 div:first-child{
  width: 50%;
  position: relative;
}

.wpas_content2 div:first-child > div{
  position: absolute;
  /* top: calc(50% - 25px);
  left: calc(50% -25px); */
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  /* border: 1px solid coral; */
  text-align: center;
}

.wpas_content2 div:first-child > div > a > img{
  display: block;
  margin: 0 auto;
  transition: all ease-in-out 0.3s; /* here must use all not scale */
}

.wpas_content2 div:first-child > div > a > img:hover{
  cursor: pointer;
}


.wpas_content2 div:first-child img{
  display: block;
}

.wpas_content2 div:nth-child(2){
  margin: 0 20px;
  width: 50%;
}

.wpas_content2 div:nth-child(2) p{
  width: 60%;
  margin: 0 auto;
  text-align: center;
}

.wpas_content2 div:nth-child(2) p:first-child{
  width: 80%;
  font-size: 22px;
  font-weight: bolder;
  color: black;
}

.wpas_content2 div:nth-child(2) p:nth-child(2){
  font-size: 20px;
  color: #a4de2f;
}

.wpas_content2 div:nth-child(2) p img{
  width: 80px;
  border-radius: 50%;
}

/******** pop up video -begin- ******/
.trailer2{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
  background: rgba(0, 0, 0, 0.8);
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  visibility: hidden;
  /* visibility: visible; */
  opacity: 0;
  /* border: 1px solid crimson; */
}

.trailer2.active{
  visibility: visible;
  opacity: 1;
}

.close2{
  position: absolute;
  top: 30px;
  right: 30px;
  cursor: pointer;
  max-width: 200px;
  /* border: 1px solid chocolate; */
}

.close2 i{
  color: #a4de2f;
}

.trailer2 iframe{
  position: relative;
  max-width: 900px;
  /* outline: none; */
  border: 1px solid #666;
}

/******** pop up video -end- ******/
{% endstyle %}
