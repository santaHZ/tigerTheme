<section class="page-width">
  <div class="wpas_content1">
    <div>
      <img src="{{ section.settings.image | img_url: '1000x' }}" width="300" height="auto" loading="lazy" alt="">
      <div><a onclick="wpas1_toggle();"><img src="{{ section.settings.image2 | img_url: '100x' }}" width="80" class="wpas_content1Btn" ></a></div>
    </div>
    <div>
      <p>{{ section.settings.text2 }}</p>
      <p><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></p>
      <p><img src="{{ section.settings.image3 | img_url: '100x' }}" width="100" alt=""></p>
      <p>{{ section.settings.text3 }}</p>
    </div>
  </div>
  <div class="trailer1">
      <iframe width="900" height="506" src="https://www.youtube.com/embed/{{ section.settings.text1}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      <div class="close1"><i class="fas fa-times-circle" onclick="wpas1_toggle();"></i></div>
  </div>
</section>
