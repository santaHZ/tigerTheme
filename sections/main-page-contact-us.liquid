<link rel="stylesheet" href="{{ 'section-main-page-contact-us.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page-contact-us.css' | asset_url | stylesheet_tag }}</noscript>

<div class="contactUsBanner">
  <img src="https://cdn.shopifycdn.net/s/files/1/0556/1253/9040/files/contactUs-main-img.jpg?v=1642856227" width="100%" alt="">
  <div class="contactUsBannerText">We're Always Here<br>For You</div>
</div>

<div class="mainFormArea">
  <div class="mainFormAreaText">
    <p><span class="spanBoldFont">PLACENTIA WAREHOUSE</span><br>1683 Sierra Madre cir<br>Placentia, CA92870<br>USA</p>
    <p><span class="spanBoldFont">CALL US</span><br>Phone: <a href="">1-(714)603-7547</a><br><span class="spanBoldFont">Monday - Friday</span><br>8:30AM - 4:30PM PDT </p>
    <p><span class="spanBoldFont">EMAIL US</span><br><a href="mailto:naktousa@gmail.com" class="naktoEmail">support@nakto.com</a></p>
    <p><span class="spanBoldFont">FOLLOW NAKTOUSA</span><br><span class="socialIconStyle"><a href="https://www.nakto.com/pages/facebook.com/ElectricBikeUSA/"><i class="fa fa-facebook-square" style="color: rgb(52, 85, 156);;"></i></a><a href="https://twitter.com/NaktoE"><i class="fa fa-twitter" style="color: rgb(64, 153, 255);;"></i></a><a href="https://www.instagram.com/naktousa?igshid=9bxchmrdusc8"><i class="fa fa-instagram" style="color: rgb(232, 72, 121);;"></i></a></span></p>
  </div>
  <div class="formBlock">
    <div class="contact page-width page-width--narrow spaced-section">
      <h2 class="title">{{ section.settings.heading | escape }}</h2>
      {%- form 'contact', id: 'ContactForm' -%}
        {%- if form.posted_successfully? -%}
          <div class="form-status form-status-list form__message" tabindex="-1" autofocus>{% render 'icon-success' %} {{ 'templates.contact.form.post_success' | t }}</div>
        {%- elsif form.errors -%}
          <div class="form__message">
            <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>{% render 'icon-error' %} {{ 'templates.contact.form.error_heading' | t }}</h2>
          </div>
          <ul class="form-status-list caption-large" role="list">
            <li>
              <a href="#ContactForm-email" class="link">
                {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
              </a>
            </li>
          </ul>
        {%- endif -%}
        <div class="formBlockTitle">Get In Touch</div>
        <div class="formBlockTitleDes">We value our customers greatly, and are always here to help. If you have any questions, queries or comments feel free to drop us a line and we will get back to you as soon as we can.</div>
        <div class="contact__fields">
          <div class="labelText">Name:</div>
          <div class="field">
            <input class="field__input" autocomplete="name" type="text" id="ContactForm-name" name="contact[{{ 'templates.contact.form.name' | t }}]" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="{{ 'templates.contact.form.name' | t }}">
            <label class="field__label" for="ContactForm-name">{{ 'templates.contact.form.name' | t }}</label>
          </div>
          <div class="labelText">Email:</div>
          <div class="field field--with-error">
            <input
              autocomplete="email"
              type="email"
              id="ContactForm-email"
              class="field__input"
              name="contact[email]"
              spellcheck="false"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              aria-required="true"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="ContactForm-email-error"
              {% endif %}
              placeholder="{{ 'templates.contact.form.email' | t }}"
            >
            <label class="field__label" for="ContactForm-email">{{ 'templates.contact.form.email' | t }} <span aria-hidden="true">*</span></label>
            {%- if form.errors contains 'email' -%}
              <small class="contact__field-error" id="ContactForm-email-error">
                <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                <span class="form__message">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</span>
              </small>
            {%- endif -%}
          </div>
        </div>
        <div class="labelText">Telephone:</div>
        <div class="field">
          <input type="tel" id="ContactForm-phone" class="field__input" autocomplete="tel" name="contact[{{ 'templates.contact.form.phone' | t }}]" pattern="[0-9\-]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" placeholder="{{ 'templates.contact.form.phone' | t }}">
          <label class="field__label" for="ContactForm-phone">{{ 'templates.contact.form.phone' | t }}</label>
        </div>
        <div class="labelText">Message:</div>
        <div class="field">
          <textarea
            rows="10"
            id="ContactForm-body"
            class="text-area field__input"
            name="contact[{{ 'templates.contact.form.comment' | t }}]"
            placeholder="{{ 'templates.contact.form.comment' | t }}"
          >
            {{- form.body -}}
          </textarea>
          <label class="form__label field__label" for="ContactForm-body">{{ 'templates.contact.form.comment' | t }}</label>
        </div>
        <div class="contact__button">
          <button type="submit" class="button">
            {{ 'templates.contact.form.send' | t }}
          </button>
        </div>
      {%- endform -%}
    </div>
  </div>
</div>



