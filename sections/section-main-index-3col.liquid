<div id="mainIndex3Col-{{ section.id }}" class="mainIndex3Col">
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'single_Column' -%}
        <a href="/collections/fat-tire-ebike" id="mainIndex3Col_1-{{ block.id }}">
            <img src="{{ block.settings.image | img_url: '300x' }}" width="300" height="auto" loading="lazy">
            <ul>
                <li>{{ block.settings.text1 }}</li>
                <li>{{ block.settings.text2 }}</li>
            </ul>
        </a>
        {%- style -%}
          #mainIndex3Col_1-{{ block.id }}{
            position: relative;
            display: block;
            width: 100%;
            height: auto;
            /* float: left; */
            padding: {{ block.settings.block_padding }}px;
            text-decoration: none;
            color: black;
            transition: transform 0.3s ease-in-out;
            <!-- border: 1px solid red; -->
          }

          #mainIndex3Col_1-{{ block.id }} > ul{
            padding: 0;
            margin: 0;
            position: absolute;
            top: {{ block.settings.text_top }}px;
            left: {{ block.settings.text_left }}px;
            list-style: none;
            <!-- border: 1px solid #000; -->
          }

          #mainIndex3Col_1-{{ block.id }} > img{
            display: block;
            width: 100%;
          }

          #mainIndex3Col_1-{{ block.id }} > ul > li{
            padding: 0;
            margin: 0;
            <!-- border: 1px solid #a4de2f; -->
          }

          #mainIndex3Col_1-{{ block.id }} > ul > li:first-child{
            font-size: {{ block.settings.text_size }}px;
            font-weight: {{ block.settings.text_weight }};
            line-height: {{ block.settings.line_height }}px;
          }

          @media screen and (min-width: 750px) and (max-width: 1366px){

          }



        {%- endstyle -%}
    {%- endcase -%}
  {%- endfor -%}
</div>
{% schema %}
{
  "name": "3Col product",
  "tag": "section",
  "max_blocks": 10,
  "settings": [
      {
        "type":"text",
        "id": "col_margin",
        "label": "3 Column margin"
      }
    ],
  "blocks":[
  {
    "type":"single_Column",
    "name": "Single Column",
    "limit": 6,
    "settings":[
      {
        "type": "image_picker",
        "id": "image",
        "label": "Column Image"
      },
      {
        "type": "text",
        "id": "block_padding",
        "label": "Block padding"
      },
      {
        "type": "text",
        "id": "text1",
        "label": "text1"
      },
      {
        "type": "text",
        "id": "text2",
        "label": "text2"
      },
      {
        "type": "text",
        "id": "text_top",
        "label": "Text Top"
      },
      {
        "type": "text",
        "id": "text_left",
        "label": "Text left"
      },
      {
        "type": "range",
        "id": "text_size",
        "label": "Text Size",
        "min": 10,
        "max": 100,
        "step": 1,
        "default": 16
      },
      {
        "type": "range",
        "id": "text_weight",
        "label": "Text Weight",
        "min": 300,
        "max": 900,
        "step": 100,
        "default": 300
      },
      {
        "type": "text",
        "id": "line_height",
        "label": "Line Height"
      }
    ]
  }
  ],
  "presets":[
    {
      "name": "Homepage 3 Column",
      "blocks":[
        {
          "type": "single_Column"
        }
      ]
    }
  ],
  "templates": ["index"]
}

{% endschema %}
{%- style -%}
#mainIndex3Col-{{ section.id }}{
  position: relative;
  display: flex;
  flex-direction: row;
  margin: {{ section.settings.col_margin }}px;
  <!-- border: 1px solid #a4de2f; -->
}

#mainIndex3Col-{{ section.id }} >a:first-child{
  margin-left: 20px;
}



/* 1792x828px at 326ppi iphone11*/
@media only screen 
    and (device-width: 414px) 
    and (device-height: 896px) 
    and (-webkit-device-pixel-ratio: 2){
      #mainIndex3Col-{{ section.id }}{
        position: relative;
        dispaly: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin: 0 5px;
        margin-top: 10px;
      }

      #mainIndex3Col-{{ section.id }} > a{
        margin: 0px;
        padding: 0px;
        margin-bottom: 10px
      }

      #mainIndex3Col-{{ section.id }} >a:first-child{
        margin-left: 0px;
      }

      #mainIndex3Col-{{ section.id }} >a:last-child{
        margin-bottom: 0px;
      }

    }

@media screen and (max-width: 749px){
  #mainIndex3Col-{{ section.id }}{
    position: relative;
    dispaly: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 0 5px;
    margin-top: 10px;
  }

  #mainIndex3Col-{{ section.id }} > a{
    margin: 0px;
    padding: 0px;
    margin-bottom: 10px
  }

  #mainIndex3Col-{{ section.id }} >a:first-child{
    margin-left: 0px;
  }

  #mainIndex3Col-{{ section.id }} >a:last-child{
    margin-bottom: 0px;
  }

}
{%- endstyle -%}