<div id="sectionMainIndex-{{ section.id }}" class="sectionMainIndex">
    <div>
        <!-- <img src="https://cdn.shopify.com/s/files/1/0556/1253/9040/files/main1_4628ffd7-bb2a-45f5-81c8-67c0943fd354.jpg?v=1641362325" class="bannerMainImage"> -->
        <img src="{{ section.settings.image | img_url: '1500x' }}" class="bannerMainImage" width="300" height="auto" >
    </div>
    <div class="advertingBlock" >
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'heading' -%}
                  <div class="sectionMainIndex-heading" style="margin: {{ block.settings.text_margin }}; font-style: {{ block.settings.font_style }}; border: 0px solid blue; line-height: {{ block.settings.text_line_height }}px; color: {{ block.settings.text_color }}; font-size: {{ block.settings.text_size }}px; font-weight: {{ block.settings.text_weight }};">{{ block.settings.text | newline_to_br}}</div>
                {%- when 'bannerInfo' -%}
                  <div class="sectionMainIndex-bannerInfo" style="padding: {{ block.settings.text_padding }}; margin: {{ block.settings.text_margin }}; border: 0px solid blue; line-height: {{ block.settings.text_line_height }}px; color: {{ block.settings.text_color }}; font-size: {{ block.settings.text_size }}px; font-weight: {{ block.settings.text_weight }};">{{ block.settings.text | newline_to_br}}</div>
                {%- when 'text_with_dot' -%}
                  <div class="sectionMainIndex-text_with_dot" style="padding: {{ block.settings.text_padding }}; margin: {{ block.settings.text_margin }}; line-height: {{ block.settings.text_line_height }}px; color: {{ block.settings.text_color }}; font-size: {{ block.settings.text_size }}px; font-weight: {{ block.settings.text_weight }};"><sapn style="color:#a4de2f;">•</sapn>{{ block.settings.text1 | newline_to_br}}<sapn style="color:#a4de2f;">•</sapn>{{ block.settings.text2 | newline_to_br}}<sapn style="color:#a4de2f;">•</sapn>{{ block.settings.text3 | newline_to_br}}<sapn style="color:#a4de2f;">•</sapn>{{ block.settings.text4 | newline_to_br}}</div>
                {%- endcase -%}
            {%- endfor -%}
          <a href="/collections/all-bikes" class="sectionMainIndexBtn"><span>{{ section.settings.button_text }}</span></a>
    </div>
</div>

