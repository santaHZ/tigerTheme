{%- style -%}
#sectionMainIndex-{{ section.id }}{
  dispaly: block;
  width: 100%;
  position: relative;
  height: auto;
}

#sectionMainIndex-{{ section.id }} > div > img{
  display: block;
  width: 100%;
  height: auto;
}

#sectionMainIndex-{{ section.id }} > div:nth-child(2){
  display: flex;
  flex-direction: column;
  width: {{ section.settings.box_width }}px;
  height: {{ section.settings.box_height }}px;
  position: absolute;
  top: {{ section.settings.box_top }}%;
  left: {{ section.settings.box_left }}%;
  right: {{ section.settings.box_right }}%;
  bottom: {{ section.settings.box_bottom }}%;
  <!-- border: 1px solid yellow; -->
  justify-content: flex-start;
  align-items: {{ section.settings.text_alignment }};
  background-color: {{ section.settings.box_bgcolor | color_modify: 'alpha', 0.2 }};

}

.sectionMainIndexBtn{
  display: block;
  background-color: #EF6B24;
  color: white;
  font-size: {{ section.settings.button_text_size }}px;
  font-weight: bolder;
  line-height: {{ section.settings.button_text_line_height }}px;
  text-decoration: none;
  width: {{ section.settings.button_width }}%;
  /* margin: 0 auto; */
  text-align: center;
}

@media screen and (max-width: 749px){
  #sectionMainIndex-{{ section.id }} > div:nth-child(2){
    display: flex;
    flex-direction: column;
    width: {{ section.settings.mobile_box_width }}px;
    height: {{ section.settings.mobile_box_height }}px;
    position: absolute;
    top: {{ section.settings.mobile_box_top }}%;
    left: {{ section.settings.mobile_box_left }}%;
    right: {{ section.settings.mobile_box_right }}%;
    bottom: {{ section.settings.mobile_box_bottom }}%;
    border: 0px solid yellow;
    justify-content: flex-start;
    align-items: {{ section.settings.mobile_text_alignment }};
  }
  
  .sectionMainIndexBtn{
    display: block;
    background-color: #EF6B24;
    color: white;
    font-size: {{ section.settings.mobile_button_text_size }}px;
    font-weight: bolder;
    line-height: {{ section.settings.mobile_button_text_line_height }}px;
    text-decoration: none;
    width: {{ section.settings.mobile_button_width }}%;
    /* margin: 0 auto; */
    text-align: center;
  }
}

